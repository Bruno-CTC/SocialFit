<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">NOME</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">23sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="textBoxStyle">
        <item name="android:background">@drawable/rounded_input</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="buttonStyle">
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="sidebarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/indigo</item>
        <item name="android:fontFamily">@font/baloo</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">16dp</item>

        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigo</item>
        <item name="colorAccent">@color/lavender_light</item>

        <item name="colorControlActivated">@color/lavender_dark</item>
    </style>
</resources>